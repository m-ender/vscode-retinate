{
	"name": "retinate",
	"displayName": "Retinate",
	"description": "Transform files through Retina scripts",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/m-ender/vscode-retinate"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:retinate.runOnActiveDocument",
		"onCommand:retinate.runOnSelection"
	],
	"main": "./out/retinate.js",
	"contributes": {
		"commands": [
			{
				"category": "Retinate",
				"command": "retinate.runOnActiveDocument",
				"title": "Run On Active Document"
			},
			{
				"category": "Retinate",
				"command": "retinate.runOnSelection",
				"title": "Run On Selection"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "retinate.runOnActiveDocument",
					"when": "editorIsOpen"
				},
				{
					"command": "retinate.runOnActiveDocument",
					"when": "editorIsOpen"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Retinate",
			"properties": {
				"retinate.retinaPath": {
					"type": "string",
					"default": "retina",
					"description": "Path to Retina executable."
				},
				"retinate.timeout": {
					"type": "number",
					"default": 3,
					"description": "Timeout before Retina gets killed, in seconds."
				},
				"retinate.maxOutputSize": {
					"type": "number",
					"default": 204800,
					"description": "Maximum output size of Retina, in bytes."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && npm run test-scripts && node ./node_modules/vscode/bin/test",
		"test-scripts": "node copy-test-scripts.js"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"shelljs": "^0.8.3",
		"chai": "^4.2.0",
		"chai-string": "^1.5.0",
		"@types/chai": "^4.1.3",
		"@types/chai-string": "^1.4.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
