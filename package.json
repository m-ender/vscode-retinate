{
	"name": "search-and-retina",
	"displayName": "Search and Retina",
	"description": "Transform files through Retina scripts",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:retina.runOnActiveDocument"
	],
	"main": "./out/retina.js",
	"contributes": {
		"commands": [
			{
				"category": "Retina",
				"command": "retina.runOnActiveDocument",
				"title": "Run On Active Document"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "retina.runOnActiveDocument",
					"when": "editorIsOpen"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Search and Retina",
			"properties": {
			  "searchAndRetina.retinaPath": {
                "type": "string",
                "default": "retina",
                "description": "Path to Retina executable."
              },
              "searchAndRetina.timeout": {
                "type": "number",
				"default": 3,
				"description": "Timeout before Retina gets killed, in seconds."
              },
              "searchAndRetina.maxOutputSize": {
                "type": "number",
				"default": 204800,
				"description": "Maximum output size of Retina, in bytes."
              }
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}